<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add and Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>

<body>
    <form action="" method="POST">
        <!--Name-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-3">
                <input type="text" class="form-control" name="name">
            </div>
        </div>

        <!--Email-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-3">
                <input type="email" class="form-control" name="email">
            </div>
        </div>




        <!--First test score-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">First test score</label>
            <div class="col-sm-1">
                <input type="number" class="form-control" name="firstTest" min="0" max="10">
            </div>
        </div>


        <!--Second test score-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Second test score</label>
            <div class="col-sm-1">
                <input type="number" class="form-control" name="secondTest" min="0" max="10">
            </div>
        </div>


        <!--Third test score-->
        <div class="row mb-3">
            <label class="col-sm-2 col-form-label">Third test score</label>
            <div class="col-sm-1">
                <input type="number" class="form-control" name="thirdTest" min="0" max="10">
            </div>
        </div>

        <button type="submit" class="rounded-pill btn btn-success">Submit</button>
        <a href="result" class="rounded-pill btn btn-secondary">View All</a>

    </form>

</body>

</html>